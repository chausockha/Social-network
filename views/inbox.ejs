<section >
	<div class="gap gray-bg">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="row" id="page-contents">

						<div class="col-md-3">
							<%- include ("includes/left-sidebar") %>
						</div>

						<div class="col-md-6">
							<div class="central-meta">
							<div class="messages">
								<h5 class="f-title">
									<i class="ti-bell"></i>
									All messages
									<span class="more-options">
